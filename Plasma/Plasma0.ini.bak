HOME = 0

HOME_OFFSET = -100.0
HOME_SEARCH_VEL = -40
HOME_LATCH_VEL = 2
HOME_FINAL_VEL = -2
HOME_IGNORE_LIMITS = YES

HOME_SEQUENCE = 1

BACKLASH = 0.01

