#######################################
#Config By SC For Novamill 3 axis milling machine
#with Probotix PBX-BB and BBB and Gecko 201x stepper drivers
##########################################

[PRUCONF]
DRIVER=hal_pru_generic
CONFIG=pru=1 num_stepgens=5 num_pwmgens=3
PRUBIN=xenomai/pru_generic.bin

[EMC]
MACHINE = Novamill0
#NML_FILE = emc.nml
DEBUG = 0

[DISPLAY]
DISPLAY = axis
EDITOR = gedit
#POSITION_OFFSET = RELATIVE
POSITION_FEEDBACK = ACTUAL
MAX_FEED_OVERRIDE = 1.2
INTRO_GRAPHIC = emc2.gif
INTRO_TIME = 5
PROGRAM_PREFIX = /home/machinekit/linuxcnc/nc_files
INCREMENTS = 5mm 1mm .5mm .1mm .05mm .01mm .005mm
#PYVCP = panel.xml

#[PENDANT]
#SPEED_1 = 400
#SPEED_2 = 600
#SPEED_3 = 1200

[TASK]
TASK = milltask
CYCLE_TIME = 0.010

[RS274NGC]
PARAMETER_FILE = metric.var

[EMCMOT]
EMCMOT = motmod
SHMEM_KEY = 111
COMM_TIMEOUT = 1.0
COMM_WAIT = 0.010
BASE_PERIOD = 57000
#110000
SERVO_PERIOD = 1100000 
#1100000

[HAL]
HALFILE = Novamill0.hal
#HALFILE = custom.hal
#POSTGUI_HALFILE = custom_postgui.hal
HALUI = halui

[TRAJ]
AXES = 3
COORDINATES = X Y Z
LINEAR_UNITS = mm
ANGULAR_UNITS = degree
CYCLE_TIME = 0.010
DEFAULT_VELOCITY = 4.00
MAX_LINEAR_VELOCITY = 40.00
#NO_FORCE_HOMING = 0 

[EMCIO]
EMCIO = io
CYCLE_TIME = 0.100
TOOL_TABLE = tool.tbl

[SPINDLE]
SCALE = 1
PWM_PERIOD = 10000000

[AXIS_0]
TYPE = LINEAR

MAX_VELOCITY = 100.0
MAX_ACCELERATION = 100.0
STEPGEN_MAXACCEL = 125.0
SCALE = -1000.0
FERROR = 1
MIN_FERROR = .25

MIN_LIMIT = -10.0
MAX_LIMIT = 850.0

HOME = 0

HOME_OFFSET = 0
HOME_SEARCH_VEL = 10.00
HOME_LATCH_VEL = -2.5
HOME_FINAL_VEL = 5.00

HOME_SEQUENCE = 1

BACKLASH = 0.01

[AXIS_1]
TYPE = LINEAR

MAX_VELOCITY = 100.0
MAX_ACCELERATION = 100.0
STEPGEN_MAXACCEL = 125.0
SCALE = 1000.0
FERROR = 1
MIN_FERROR = .25

MIN_LIMIT = -160.0
MAX_LIMIT = 0.0

HOME = 0

HOME_OFFSET = 0.0
HOME_SEARCH_VEL = -10.0
HOME_LATCH_VEL = -2.5
HOME_FINAL_VEL = 10.0

HOME_SEQUENCE = 2

BACKLASH = 0.02

[AXIS_2]
TYPE = LINEAR

MAX_VELOCITY = 80.0
MAX_ACCELERATION = 20.0
STEPGEN_MAXACCEL = 25.0
SCALE = -1000
FERROR = 1
MIN_FERROR = .25

MIN_LIMIT = -175.0
MAX_LIMIT = 200.0

HOME = 0.0
HOME_OFFSET = 0.0
HOME_SEARCH_VEL = -10.0
HOME_LATCH_VEL = -1.5
HOME_FINAL_VEL = 1.5

#HOME_IGNORE_LIMITS = 1
HOME_SEQUENCE = 0

BACKLASH = 0.04

